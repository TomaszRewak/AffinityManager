<Window
	x:Class="AffinityManager.Views.ManagerWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:AffinityManager.Views"
	xmlns:viewmodels="clr-namespace:AffinityManager.ViewModels"
	mc:Ignorable="d"
	Title="ManagerWindow"
	Height="450"
	Width="800"
	d:DataContext="{d:DesignInstance viewmodels:ManagerViewModel}"
	SizeToContent="WidthAndHeight">
	<StackPanel>
		<TextBlock
			Text="{Binding NumberOfProcesses}" />
		<TextBlock
			Text="{Binding NumberOfCores}" />
		<ItemsControl
			ItemsSource="{Binding Rules}">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel
						x:Name="RulesContainer" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
			<ItemsControl.ItemTemplate>
				<DataTemplate>
					<local:RuleView
						DataContext="{Binding}" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ItemsControl>
		<Button
			Content="Add new rule"
			Margin="5"
			Background="#bbeebb"
			Command="{Binding AddRuleCommand}" />
		<Button
			Content="Apply changes"
			Command="{Binding ApplyChangesCommand}" />
	</StackPanel>
</Window>
